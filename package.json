{
  "name": "rainbow-rims-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test:watch": "npm run test -- --watch",
    "coverage": "tsc -p tsconfig.tests.json && c8 node --test \"build/tests/tests/**/*.js\"",
    "preview": "vite preview",
    "baseline": "tsc -p tsconfig.baseline.json && node --loader ./scripts/tools/esm-extension-loader.mjs baseline-dist/scripts/runBaseline.js",
    "baseline:check": "tsc -p tsconfig.baseline.json && node --loader ./scripts/tools/esm-extension-loader.mjs baseline-dist/scripts/checkBaseline.js",
    "cross-tier:check": "tsc -p tsconfig.baseline.json && node --loader ./scripts/tools/esm-extension-loader.mjs baseline-dist/scripts/runCrossTierValidation.js",
    "cross-tier:update": "tsc -p tsconfig.baseline.json && node --loader ./scripts/tools/esm-extension-loader.mjs baseline-dist/scripts/updateCrossTierBaseline.js",
    "test": "tsc -p tsconfig.tests.json && node --test \"build/tests/tests/**/*.js\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.3",
    "prettier": "^3.2.5",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.12"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,css,md,json,yml,yaml}": [
      "prettier --check"
    ]
  }
}
