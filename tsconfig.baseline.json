{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "baseline-dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": false,
    "noEmit": false
  },
  "include": [
    "src/pipeline/**/*.ts",
    "src/validation/**/*.ts",
    "src/kuramotoCore.ts",
    "scripts/runBaseline.ts",
    "scripts/checkBaseline.ts",
    "scripts/runCrossTierValidation.ts",
    "scripts/updateCrossTierBaseline.ts",
    "types/node-shim.d.ts"
  ]
}
